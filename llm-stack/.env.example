# ============================================
# LLM Stack Environment Configuration
# ============================================
# Copy this file to .env and customize values

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_DB=llm_db
POSTGRES_USER=llm_user
POSTGRES_PASSWORD=change_this_strong_password_123
POSTGRES_PORT=5432

# ============================================
# Ollama Configuration
# ============================================
OLLAMA_PORT=11434

# ============================================
# Open WebUI Configuration
# ============================================
WEBUI_PORT=3000
# Generate a secure secret key: openssl rand -hex 32
WEBUI_SECRET_KEY=change_this_to_a_random_secret_key_use_openssl_rand

# ============================================
# pgAdmin Configuration
# ============================================
PGADMIN_EMAIL=admin@local.dev
PGADMIN_PASSWORD=change_this_admin_password

# ============================================
# Nginx Configuration
# ============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# Future Expansion Variables
# ============================================
# Uncomment and configure as you add services

